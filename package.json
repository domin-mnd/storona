{
  "name": "storona",
  "version": "1.1.0",
  "description": "Simple opinionated file-based routing for your JavaScript applications",
  "homepage": "https://storona.domin.lol",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domin-mnd/storona.git"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test publish:test",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "version:switch": "bun run scripts/version/switch.ts",
    "version:commit": "bun run scripts/version/commit.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "author": "domin-mnd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/domin-mnd/storona/issues"
  },
  "workspaces": [
    "packages/**",
    "docs"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@domin-mnd/config": "0.0.3",
    "@types/bun": "1.1.14",
    "husky": "^9.1.6",
    "turbo": "^2.3.3",
    "typescript": "5.4.4"
  },
  "packageManager": "bun@1.1.36",
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
